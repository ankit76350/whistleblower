# ===========================================
# Application Configuration Template
# ===========================================
# Copy this file to application.properties and fill in your values
# DO NOT commit application.properties with real credentials!

# Reduce logging level to make sure the application works with SAM local
# https://github.com/aws/serverless-java-container/issues/134
logging.level.root=WARN
spring.profiles.active=local
app.show-stacktrace=true

# ===========================================
# AWS Credentials
# ===========================================
# Get these from AWS IAM console
cloud.aws.credentials.access-key=<your-aws-access-key-id>
cloud.aws.credentials.secret-key=<your-aws-secret-access-key>
cloud.aws.region.static=eu-central-1
aws.region=eu-central-1

# ===========================================
# MongoDB Configuration
# ===========================================
# Get this from MongoDB Atlas connection string
spring.data.mongodb.uri=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?appName=<app-name>

# ===========================================
# AWS Cognito Configuration
# ===========================================
# Get User Pool ID from AWS Cognito console
aws.cognito.userPoolId=<region>_<user-pool-id>

# Cognito JWT validation
spring.security.oauth2.resourceserver.jwt.issuer-uri=https://cognito-idp.<region>.amazonaws.com/<region>_<user-pool-id>

# ===========================================
# CORS Configuration
# ===========================================
app.cors.allowed-origins=http://localhost:3000,http://localhost:5173
